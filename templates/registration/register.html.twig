{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
    {% if verification == 1 %}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.Telephone) }}
        {{ form_row(registrationForm.Adresse) }}
        {{ form_row(registrationForm.CodePostal) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.Entreprise) }}
        {{ form_row(registrationForm.Pays) }}
        {% endif %}
        {% if verification == 2 %}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.prenom) }}
            {% do registrationForm.plainPassword.setRendered() %}
            {% do registrationForm.Telephone.setRendered() %}
            {% do registrationForm.Adresse.setRendered() %}
            {% do registrationForm.CodePostal.setRendered() %}
            {% do registrationForm.ville.setRendered() %}
            {% do registrationForm.Entreprise.setRendered() %}
            {% do registrationForm.Pays.setRendered() %}
        {% endif %}

        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn bg-warning">Inscription</button>
    {{ form_end(registrationForm) }}
<div>
<br>
</div>
<br>
{% endblock %}


{% block progression %}
 {% if verification == 2 %}
{{ include('ProgressionBar.html.twig') }}
{% endif %}
{% endblock %}

